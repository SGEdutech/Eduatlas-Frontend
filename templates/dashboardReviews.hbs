{{#each reviews as |review|}}
<div class="col-12">
    <div class="card" id="{{_id}}">
        <div class="card-body">
            <h4 class="card-title">{{tuitionName}}</h4>
            <h6 class="card-subtitle mb-2 text-muted">{{rating}}/5</h6>
            <p class="card-text">{{description}}</p>
            <div class="row justify-content-end">
                <button class="btn btn-info btn-sm btn-round edit-review-button" data-tuition-id="{{tuitionId}}"
                    data-review-id="{{_id}}" data-category="{{category}}">
                    Update
                </button>
                <button class="btn btn-danger btn-sm btn-round delete-review-button" data-tuition-id="{{tuitionId}}"
                    data-review-id="{{_id}}" data-category="{{category}}">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>
{{else}}
<small class="text-danger mx-3">No reviews to show</small>
{{/each}}