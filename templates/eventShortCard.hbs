{{#if col4}}
<div class="col-md-4">
    {{/if}}
    <div class="card newFont">
        <div class=" tuition-cards" style="cursor: pointer" onclick="helperScripts.openDetailsPage('event','5bc1d90ff16aa864dafb0cad')">
            <div class="card p-0 m-0 rounded-0 rounded-top" style="overflow: hidden;text-overflow: ellipsis;background-color: rgba(0,0,0,0.5)">
                <div class="rounded-top" style="position: absolute; height: 100%;width: 100%;background-color: rgba(0,0,0,0.5)">
                </div>
                {{#if img_eventCoverPic}}
                <img class="card-img-top" src="images/{{img_eventCoverPic}}" alt="Event Image" style="height: 175px;width: 100%;">{{else}}
                <img class="card-img-top" src="assets/img/event2-darken.png" alt="Event Image" style="height: 175px;width: 100%;"> {{/if}}
                <div class="card-img-overlay">
                    <div class="row">
                        <div class="col-md-3">
                            <button class="btn btn-danger" style="min-width: 53px;position: absolute;top: 0%;left: 0%;transform: translate(8%,-4%);color: white;background-color: #00bcd4!important;font-size: 34px;padding: 1px;font-weight: bold;">
                                <div class="row justify-content-center">
                                    {{fromDate}}
                                </div>
                                <div class="row justify-content-center">
                                    <small style="color:black;font-size:12px;"> {{fromMonth}}</small>
                                </div>
                            </button>
                        </div>
                        <div class="col-md-9 pl-0">
                            <h5 class="card-title text-white mt-0" style="height: 78px;overflow: hidden;">{{name}}</h5>
                        </div>
                    </div>
                    <div class="mt-1">
                        <button class="btn btn-warning p-0" style="position: absolute;padding-top: 4px!important;padding-right:4px!important;border-radius: 30px;padding-left: 18px!important;padding-right: 18px!important;padding-bottom: 4px !important;">2.5/5</button>
                        {{#if claimedBy}}
                        <button class="btn btn-danger p-0" style="left:30%;!important;background: #00bcd4;position: absolute;padding-top: 4px!important;padding-right:4px!important;border-radius: 30px;padding-left: 18px!important;padding-right: 18px!important;padding-bottom: 4px !important;">VERIFIED</button>
                        {{else}} {{/if}}
                    </div>
                    <br> {{!-- For Future Use --}} {{!--
                    <div class="mt-3" style="height: 23px;overflow: hidden;">
                        <span class="badge badge-pill badge-primary">Primary</span>
                        <span class="badge badge-pill badge-info">Info</span>
                        <span class="badge badge-pill badge-success">Success</span>
                        <span class="badge badge-pill badge-danger">Danger</span>
                    </div> --}}

                </div>
            </div>
        </div>
    </div>
    {{#if col4}}
</div>
{{/if}}