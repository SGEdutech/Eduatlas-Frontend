{{#each faculty}}
<div class="col-4" id="faculty{{id}}">
    <div class="card card-nav-tabs">
        <span style="position: absolute;left: 92%;top: -6%;">
            <!-- send (name of the faculty , id of card) as arguments for function deleteFaculty()-->
        </span>
        {{#if img_path}}
        <img class="card-img-top" src="images/{{img_path}}" alt="Faculty Image">
        {{/if}}
        <div class="card-body">
            <div class="card-title">
                {{name}}
            </div>
            <div class="card-subtitle mb-2 text-muted">
                {{qualification}}
            </div>
            <p class="card-text">{{description}}</p>
        </div>
    </div>
</div>
{{else}}
<small class="text-danger">No data</small>
{{/each}}