<div class="card m-0 mb-4">
    <div class="card-title col-12 h3">
        {{#each schedules as |schedule|}}
        {{#if @first}}
        {{schedule.batchCode}}
        {{/if}}
        {{/each}}
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="card-title col-12 h4 font-weight-normal">
                Attendence
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-title col-12 h4" style="color:#00bcd4 !important">
                {{attendencePercentage}}%
            </div>
        </div>
    </div><br>
    <div class="col-12 mb-3">
        <div style="width:100%;height:195px!important;overflow-y: scroll!important;">
            <table class="table" style="background-color: darkgrey;">
                <thead>
                    <tr>
                        <th class="text-center">Date</th>
                        <th>Topic</th>
                        <th>Faculty</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each schedules as |schedule|}}
                    <tr>
                        <td class="text-center">{{schedule.date}}</td>
                        <td>{{schedule.topic}}</td>
                        <td>{{schedule.faculty}}</td>

                        {{#if isAbsent}}
                        <td class="text-danger">Absent</td>
                        {{else}}
                        <td class="text-success">Present</td>
                        {{/if}}
                    </tr>
                    {{/each}}
