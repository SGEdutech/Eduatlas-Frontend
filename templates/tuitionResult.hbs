{{#each results}}
    <div class="col-4">
        <div class="card">
            <span style="position: absolute;left: 92%;top: -6%;">
            </span>
            {{#if img_cover}}
            <img class="card-img-top" src="images/{{img_cover}}" alt="Result Image">
            {{/if}}
            <div class="card-body">
                <div class="card-title">
                    {{title}}
                </div>
                <p class="card-text">{{description}}</p>
            </div>
        </div>
    </div>
    {{else}}
    <small class="text-danger">No data</small>
{{/each}}