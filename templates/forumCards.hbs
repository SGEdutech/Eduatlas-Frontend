{{#each forums as |post|}}
<div class="card m-1" id="{{post._id}}">
    <div class="card-body">
        <a class="row nav nav-item nav-link p-0" style="cursor: pointer">
            <h3 class="card-heading font-weight-bold m-0">{{post.title}}</h3>
            <i class="material-icons show-forum-post" data-forum-id="{{post._id}}">
                remove_red_eye
            </i>
        </a>
        <div class="row">
            <small><span class="text-secondary">posted</span>
                {{post.createdAt}} days ago <span class="text-secondary">by </span>
                {{post.tuitionName}}
            </small>
        </div>
        {{!-- <div class="row">
            <small class="text-secondary">
                {{post.numComments}} comments
            </small>
        </div> --}}
    </div>
</div>
{{/each}}