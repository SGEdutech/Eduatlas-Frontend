<div class="col-md-4">
    <div class="card">
        <div class=" tuition-cards" style="cursor: pointer" onclick="helperScripts.openDetailsPage('{{typeOfInfo}}','{{_id}}')">
            <img class="card-img-top" src="assets/img/event2.png" alt="event cover image">
            <div class="card-body mt-0 pt-0">
                <div class="row justify-content-end">
                    <div class="col-8">
                        <h5 class="card-title" style="min-height: 25px;max-height: 25px;text-overflow: ellipsis;
                    overflow: hidden">{{name}}</h5>
                    </div>
                    <div class="col-4 text-center">
                        <h5 class="row m-0 p-0 text-danger font-weight-bold">{{fromDate}}</h5>
                        {{#if oneDayEvent}} {{else}}
                        <p class="row m-0 p-0">onwards</p>
                        {{/if}}
                    </div>
                </div>
                <p class="text-secondary mt-1" style="min-height: 70px;max-height: 70px;text-overflow: ellipsis;
            overflow: hidden; ">{{addressLine1}},{{addressLine2}},{{city}},{{state}}</p>
                <small class="text-secondary">Last Date Of Registration: {{lastDateRegistration}}</small>
            </div>
        </div>
    </div>
</div>