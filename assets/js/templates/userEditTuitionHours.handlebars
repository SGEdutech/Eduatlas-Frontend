<form class="row" id="monForm">
    <div class="col-4">
        Monday:
        <input hidden name="day" value="Monday">
    </div>
    <div class="col-3">
        <input class="form-control" value="{{monFrom}}" name="fromTime"
               type="text">
    </div>
    <div class="col-3">
        <input class="form-control" value="{{monTo}}" name="toTime"
               type="text">
    </div>
    <div class="col-2">
        <button class="btn btn-danger btn-fab btn-fab-mini btn-round deleteBtn"
                onclick="deleteTime('Monday')">
            <i class="material-icons">
                delete
            </i>
        </button>
    </div>
</form>


